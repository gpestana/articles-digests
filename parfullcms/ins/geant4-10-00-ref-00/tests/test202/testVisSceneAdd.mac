# add arrow
/vis/set/colour .8 .6 .1
/vis/scene/add/arrow 0 0 0 10 10 10

# add arrow2d
/vis/set/colour .8 .6 10
/vis/scene/add/arrow2D -.5 -.5 .9 .9

# add arrow2d + change color
/vis/set/colour .1 .9 .1
/vis/scene/add/arrow2D -.2 -.5 .5 .9

# add axes
/vis/scene/add/axes 5 0 0 9 m auto

# add date + left
#/vis/scene/add/date 10 -.7 -.9 left

# add date + right + change color
#/vis/set/textColour .8 .1 .1
